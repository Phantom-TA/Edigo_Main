# ===================================
# SOCKET.IO CONFIGURATION
# ===================================

# Socket.IO Server URL (for client-side connection)
# Development: http://localhost:3000
# Production: Your production domain (e.g., https://yourdomain.com)
NEXT_PUBLIC_SOCKET_URL=http://localhost:3000

# Port for Next.js server (Socket.IO runs on same port)
PORT=3000

# App URL (for CORS configuration)
# Development: http://localhost:3000
# Production: Your production domain
NEXT_PUBLIC_APP_URL=http://localhost:3000

# ===================================
# EXISTING ENVIRONMENT VARIABLES
# (Keep all your existing variables)
# ===================================

# Database
DATABASE_URL=your_database_url

# Clerk Authentication
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=your_clerk_key
CLERK_SECRET_KEY=your_clerk_secret

# Supabase (for file storage)
NEXT_PUBLIC_SUPABASE_URL=your_supabase_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_key

# Groq AI
NEXT_PUBLIC_GROQ_API_KEY=your_groq_api_key

# Stripe
STRIPE_SECRET_KEY=your_stripe_secret_key
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=your_stripe_publishable_key
